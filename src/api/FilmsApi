export const addFilm = (body) => {
    return axios.post("/film", body)
        .then((response) => {
            return response;
        })
        .catch((error) => {
            return error;
        });
}

export const editFilm = (id, body) => {
    return axios.put("/film/" + id, body)
        .then((response) => {
            return response;
        })
        .catch((error) => {
            return error;
        });
}

export const deleteFilm = (id) => {
    return axios.delete("/film/" + id)
        .then(response => {
            return response;
        })
        .catch((error) => {
            return error;
        });
}