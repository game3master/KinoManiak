import axios from 'axios';
axios.defaults.baseURL = 'http://localhost:7777/';

export const getAllFilms = () => {
    return axios.get('films')
        .then((response) => {
            return response.data;
        })
        .catch((error) => {
            return error;
        });
}

export const getFilmById = (id) => {
    return axios.get('film/' + id)
        .then((response) => {
            return response.data;
        })
        .catch((error) => {
            return error;
        });
}

